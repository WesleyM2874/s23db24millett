extends layout

block content
  script.
    class Donuts {
      constructor(donut_type, num, price){
        this.donut_type = donut_type
        this.num = num
        this.price = price
      }
    }

  h1= title

  div(class="container-fluid")
    div(class="row m-1")
      each donut in results
        - let destination = `dispatch(\"/donuts/update?id=${donut._id}\")`
        div(class="row-sm-2", class="m-1") Item #{donut.donut_type}(#{donut.num}) is #{donut.price}
          button.btn(class="btn-primary m1-1", onclick=destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }