extends layout

block content
  script.
    mph = 20
    change = 1
    function goFaster(){
      mph += change
      change += 1
      document.getElementById("faster").innerHTML = 'MPH ' + mph + ' with change ' + change
    }

    class Donuts {
      constructor(donutType, numberOfDonuts, xPrice){
        this.donutType = donutType
        this.numberOfDonuts = numberOfDonuts
        this.xPrice = xPrice
      }
    }

  h1= title
  p Welcome friends, to #{title}
  button(type="button", class="btn btn-secondary", onclick="goFaster()") Press me
  div(id="faster") MPH #{mph} with change #{change}

  a(href='/donuts') Link to Donuts