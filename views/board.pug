extends layout

block content
  script.
    function computeValue(row, col){
      return (row + 1) * (col + 1);
    }

    class Donuts {
      constructor(donutType, numberOfDonuts, xPrice){
        this.donutType = donutType
        this.numberOfDonuts = numberOfDonuts
        this.xPrice = xPrice
      }
    }

  h1= title
  p= "Num of rows: " + query.rows
  p= "Num of cols: " + query.cols

  - let rows = Number(query.rows)
  - let cols = Number(query.cols)

  - if(!Number.isInteger(rows) || !Number.isInteger(cols))
    p The input must be integer values.

  - else if(rows > 10 || rows < 1)
    p Must choose a row value from 1-10

  - else if(cols > 10 || cols < 1)
    p Must choose a cols value from 1-10

  - else
    table#outer
      - for(let i=0; i < rows; i++) {
        tr#middle
          - for(let j=0; j < cols; j++) {
            - if(i == j)
              td= 1
            - else if(i-1 == j)
              td= 2
            - else if(i == j-1)
              td= i
            - else
              td= 0
          - }
      - }