extends layout

block content 
    h1=title 
    
    - let donutid = toShow.id 
    - let donut_type = toShow.donut_type 
    - let num = toShow.num 
    - let price = toShow.price 
    div 
        div.row
            div(class='donutAttr mr-3') Donut ID is:
            div #{donutid}
        div.row
            div(class='donutAttr mr-3') Donut type is: 
            div #{donut_type}
        div.row 
            div(class='donutAttr mr-3') Donut num is:
            div #{num}
        div.row 
            div(class='donutAttr mr-3') Donut price is: 
            div #{price}